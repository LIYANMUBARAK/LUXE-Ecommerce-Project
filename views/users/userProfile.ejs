<%- include("../layouts/userHeader.ejs") %>

	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container m-3">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="/">LUXE</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse"
						data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item"><a class="nav-link" href="/">Home</a></li>
							<li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>


							<% if (typeof user !=="undefined" ){ %>

								<li class="nav-item submenu dropdown">
									<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"
										aria-haspopup="true" aria-expanded="false">
										<%= user.name %>
									</a>
									<ul class="dropdown-menu">
										<li class="nav-item"><a class="nav-link text-dark">Wallet : $ <%= user.wallet %></a>
										</li>
										<li class="nav-item"><a class="nav-link" href="/orders">My Orders</a></li>
										<li class="nav-item"><a class="nav-link" href="/userProfile">User details</a>
										</li>
										<li class="nav-item"><a class="nav-link" href="/logout">LogOut</a></li>
									</ul>
								</li>
								<li class="nav-item "><a class="nav-link" href="/wishlist">Wishlist</a></li>
								<li class="nav-item" style="margin-top:11.5px;"><a href="/cart" class="cart"><span
											style="color: black;" class="ti-bag"></span></a></li>

								<% } else{%>

									<li class="nav-item"><a class="nav-link" href="/login">Log In/Sign UP</a></li>
									<li class="nav-item" style="margin-top:11.5px;"><a href="/cart" class="cart"><span
												style="color: black;" class="ti-bag"></span></a></li>
									<%}%>
						</ul>
						
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between">
					<input type="text" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>
	<!-- End Header Area -->

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">

			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<h1>User Profile</h1>

			<table class="table">
				<h3 class="mb-2"><a href="/editUserProfile" class="genric-btn  btn-dark float-right">Edit</a></h3>
				<tbody>
					
					<tr>

						<td>
							<h4>User Name</h4>
						</td>
						<td></td>
						<td>
							<%=user.name%>
						</td>

					</tr>
					<tr>

						<td>
							<h4>Email</h4>
						</td>
						<td></td>
						<td>
							<%=user.email%>
						</td>

					</tr>
					<tr>

						<td>
							<h4>Mobile Number</h4>
						</td>
						<td></td>
						<td>
							<%=user.mobile%>
						</td>

					</tr>
					<tr>

						<td>
							<h4>Password</h4>
						</td>
						<td></td>
						<td>***********</td>

					</tr>

					<tr>

						<td>
							<h4>Wallet</h4>
						</td>
						<td></td>
						<td><b>$<%= user.wallet %></b></td>

					</tr>

					<tr>
						<td>
							<h4>Address</h4> <br>
							<p class="">
								<% if(user.address.length>0) {
									for(let i=0;i<user.address.length;i++) {%>
										<b>
											<%= i+1 %>
										</b> <br>
										<%=user.address[i].name%><br>
											<%=user.address[i].email%><br>
												<%=user.address[i].mobile%><br>
													<%=user.address[i].country%><br>
														<%=user.address[i].state%><br>
															<%=user.address[i].address%><br>
																<%=user.address[i].landmark%><br>
																	<%=user.address[i].pincode%><br>
																		<a class="genric-btn btn-primary"
																			href="/editAddress?id=<%=user.address[i]._id%>">Edit</a>
																		<a class="genric-btn btn-danger"
																			href="/deleteAddress?id=<%=user.address[i]._id%>">Delete</a>
							</p>

							<%}%>


						</td>
						<td><a class="genric-btn btn-success" href="/addAddress?id=<%=user._id%>">Add Address</a></td>
						<%}%>
					</tr>

				</tbody>
			</table>
		
		</div>

	</section>
	<!--================End Login Box Area =================-->

	<!-- start footer Area -->
	
	<!-- End footer Area -->


	<%- include('../layouts/userFooter.ejs') %>
	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">

			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container ">
			<div class="card mb-4">
				<h1 class="card-header">Edit Address</h1>
				<div class="card-body">

					<form method="post">
						<% address.forEach((address)=>{%>
							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
								<div class="col-sm-10">

									<input type="text" name="name" class="form-control" value="<%=address.name%>">
								</div>
							</div>

							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
								<div class="col-sm-10">
									<input type="text" name="email" class="form-control" value="<%=address.email%>">
								</div>
							</div>

							<div class="form-group row">
								<label for="staticEmail" class="col-sm-2 col-form-label">Mobile Number</label>
								<div class="col-sm-10">
									<input type="text" name="mobile" class="form-control" value="<%=address.mobile%>">
								</div>
							</div>




							<div class="mb-3 row">
								<label for="exampleFormControlSelect1" class="col-md-2 col-form-label">Country
								</label>
								<div class="col-md-10">
									<select name="country" class="form-select" id="exampleFormControlSelect1"
										aria-label="Default select example">
										<option selected hidden>
											<%= address.country%>
										</option>
										<option>India</option>

									</select>
								</div>
							</div>

							<div class="mb-3 row">
								<label for="exampleFormControlSelect1" class="col-md-2 col-form-label">State
								</label>
								<div class="col-md-10">
									<select style="height: 150px ;overflow: auto" name="state" class="form-select"
										id="exampleFormControlSelect1" aria-label="Default select example">

										<option selected hidden>
											<%= address.state%>
										</option>
										n>
										<option>Goa</option>
										<option>Gujarat</option>
										<option>Haryana</option>
										<option>Himachal Pradesh</option>
										<option>Jharkhand</option>
										<option>Karnataka</option>
										<option>Kerala</option>

								</div>

								<div class="form-group row">
									<label for="staticEmail" class="col-sm-2 col-form-label">Address</label>
									<div class="col-sm-10">
										<textarea name="address" class="form-control" id="exampleFormControlTextarea1"
											rows="5"><%= address.addres %></textarea>
									</div>
								</div>

								<div class="form-group row">
									<label for="staticEmail" class="col-sm-2 col-form-label">Landmark</label>
									<div class="col-sm-10">
										<input type="text" name="landmark" class="form-control"
											value="<%=address.landmark%>">
									</div>
								</div>

								<div class="form-group row">
									<label for="staticEmail" class="col-sm-2 col-form-label">Pincode</label>
									<div class="col-sm-10">
										<input type="text" name="pincode" class="form-control"
											value="<%=address.pincode%>">
									</div>
								</div>
								<% if(typeof errMessage !=='undefined' ){ %>
									<h4 style="color: red;">
										<%= errMessage %>
									</h4>
									<% } %>
										<a href="/userProfile" class="btn btn-dark">Back</a>
										<button class="btn btn-success" type="submit">Save</button>
										<% })%>
					</form>








				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->


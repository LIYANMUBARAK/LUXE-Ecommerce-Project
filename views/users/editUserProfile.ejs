	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container ">
			<div class="card mb-4">
				<h1 class="card-header">Edit User Details</h1>
				<div class="card-body">

					<form method="post">
						<div class="form-group row">
							<label for="staticEmail" class="col-sm-2 col-form-label">User Name</label>
							<div class="col-sm-10">
								<input type="text" name="name" class="form-control" value="<%=user.name%>">
							</div>
						</div>

						<div class="form-group row">
							<label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
							<div class="col-sm-10">
								<input type="text" name="email" class="form-control" value="<%=user.email%>">
							</div>
						</div>

						<div class="form-group row">
							<label for="staticEmail" class="col-sm-2 col-form-label">Mobile Number</label>
							<div class="col-sm-10">
								<input type="text" name="mobile" class="form-control" value="<%=user.mobile%>">
							</div>
						</div>

						<div class="form-group row">
							<label for="staticEmail" class="col-sm-2 col-form-label">Password</label>
							<div class="col-sm-10">
								<input type="password" name="password" class="form-control" value="***********">
							</div>
						</div>
						<% if(typeof errMessage !=='undefined' ){ %>
							<h4 style="color: red;">
								<%= errMessage %>
							</h4>
							<% } %>
								<a href="/userProfile" class="btn btn-dark">Back</a>
								<button class="btn btn-success" type="submit">Save</button>
					</form>








				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->


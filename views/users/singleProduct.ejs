<%- include("../layouts/userHeader.ejs") %>
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container m-3">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="/">LUXE</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse"
						data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item"><a class="nav-link" href="/">Home</a></li>
							<li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>



							<% if (typeof user !=="undefined" ){ %>

								<li class="nav-item submenu dropdown">
									<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"
										aria-haspopup="true" aria-expanded="false">
										<%= user.name %>
									</a>
									<ul class="dropdown-menu">
										<li class="nav-item"><a class="nav-link text-dark">Wallet : $ <%= user.wallet %></a>
										</li>
										<li class="nav-item"><a class="nav-link" href="/orders">My Orders</a></li>
										<li class="nav-item"><a class="nav-link" href="/userProfile">User details</a>
										</li>
										<li class="nav-item"><a class="nav-link" href="/logout">LogOut</a></li>
									</ul>
								</li>
								<li class="nav-item "><a class="nav-link" href="/wishlist">Wishlist</a></li>
								<li class="nav-item" style="margin-top:11.5px;"><a href="/cart" class="cart"><span
											style="color: black;" class="ti-bag"></span></a></li>

								<% } else{%>

									<li class="nav-item"><a class="nav-link" href="/login">Log In/Sign UP</a></li>
									<li class="nav-item" style="margin-top:11.5px;"><a href="/cart" class="cart"><span
												style="color: black;" class="ti-bag"></span></a></li>
									<%}%>
						</ul>
						
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between">
					<input type="text" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>
	<!-- End Header Area -->

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">

		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Single Product Area =================-->
	<div class="product_image_area">
		<div class="container">
			<div class="row s_product_inner">
				<div class="col-lg-6">
					<div class="s_Product_carousel">
						<% for(let i=0;i<product.image.length;i++) {%>
							<div class="single-prd-item">

								<img class="img-fluid" id="myimage" width="600px" height="350px"
									src="admin/ProductImages/<%=product.image[i]%>" alt="">

							</div>

							<%}%>
					</div>

				</div>
				<div class="col-lg-5 offset-lg-1">
					<div id="myresult" class="img-zoom-result"></div>
					<div class="s_product_text">

						<h3>
							<%=product.productName %>
						</h3>
						<div class="d-flex">
							<h2>$<%=product.price%>
							</h2>
							<h4 class="ml-2 mt-1"> <del style="color:#cccccc">$<%=product.MRP%></del>
							</h4>
						</div>
						<ul class="list">
							<li><a class="active" href="#"><span>Category</span> : <%=product.category.categoryName%>
								</a></li>
							<li><a href="#"><span>Availibility</span> : In Stock</a></li>
						</ul>
						<p>
							<%=product.description %>
						</p>

						<div class="card_area d-flex align-items-center">
							<a class="primary-btn" href="/addToCart?id=<%=product._id%>" id="addToCart"
								onclick="addToCart(event)">Add to Cart</a>

							<a class="icon_btn" href="/addToWishlist?id=<%=product._id%>"><i
									class="lnr lnr lnr-heart"></i></a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	<!--================End Single Product Area =================-->

	<!--================Product Description Area =================-->
	
	<!--================End Product Description Area =================-->

	<!-- Start related-product Area -->
	<section class="related-product-area section_gap_bottom">
		<div class="container mt-5">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h1>Related Products</h1>
						<p></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-9">
					<div class="row">
						<% relatedProducts.forEach((value)=>{%>
							<div class="col-lg-4 col-md-4 col-sm-6 mb-20">
								<div class="single-product d-flex flex-column container">
									<a href="#"><img src="admin/ProductImages/<%=value.image[0]%>" alt=""></a>
									<div class="desc text-center">
										<a href="#" class="title">
											<%= value.productName %>
										</a>
										<div class="price">
											<h6>
												<%= value.price %>
											</h6>
											<h6 class="l-through">
												<%= value.MRP %>
											</h6>
										</div>
									</div>
								</div>
							</div>
							<%})%>
					</div>
				</div>

			</div>
		</div>
	</section>
	<!-- End related-product Area -->

	<!-- start footer Area -->
	


	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.js"></script>
	
		

	<script>
		imageZoom("myimage", "myresult");
	</script>
	<%- include('../layouts/userFooter.ejs') %>
<%- include("../layouts/userHeader.ejs") %>



	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container m-3">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="index.html">LUXE</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse"
						data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item"><a class="nav-link" href="/">Home</a></li>
							<li class="nav-item "><a class="nav-link" href="/shop">Shop</a></li>
							<% if (typeof user !=="undefined" ){ %>

								<li class="nav-item submenu dropdown">
									<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"
										aria-haspopup="true" aria-expanded="false">
										<%= user.name %>
									</a>
									<ul class="dropdown-menu">
										<li class="nav-item"><a class="nav-link text-dark">Wallet : $ <%= user.wallet %></a>
										</li>
										<li class="nav-item"><a class="nav-link" href="/orders">My Orders</a></li>
										<li class="nav-item"><a class="nav-link" href="/userProfile">User details</a>
										</li>
										<li class="nav-item"><a class="nav-link" href="/logout">LogOut</a></li>
									</ul>
								</li>
								<li class="nav-item "><a class="nav-link" href="/wishlist">Wishlist</a></li>
								<li class="nav-item" style="margin-top:11.5px;"><a href="/cart" class="cart"><span
											style="color: black;" class="ti-bag"></span></a></li>

								<% } else{%>

									<li class="nav-item"><a class="nav-link" href="/login">Log In/Sign UP</a></li>
									<li class="nav-item" style="margin-top:11.5px;"><a href="/cart" class="cart"><span
												style="color: black;" class="ti-bag"></span></a></li>
									<%}%>
						</ul>
						
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between">
					<input type="text" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>
	<!-- End Header Area -->

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Confirmation</h1>
					<nav class="d-flex align-items-center">
						<a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="category.html">Confirmation</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Order Details Area =================-->
	<section class="order_details section_gap">
		<div class="container">
			<h3 class="title_confirmation">Thank you. Your order has been received.</h3>
			<div class="d-flex justify-content-center mb-5">
				<a class="btn btn-success" href="/">Go to home</a>
			</div>
			<div class="row order_d_inner">
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Order Info</h4>
						<ul class="list">
							<li><a href="#"><span>Order number</span>
									<%= order._id %>
								</a></li>
							<li><a href="#"><span>Date</span> : <%= order.date %></a></li>
							<li><a href="#"><span>Total</span> : <%= order.cartTotal %></a></li>
							<li><a href="#"><span>Payment method</span> : <%= order.paymentMethod %></a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="details_item">

					</div>
				</div>
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Shipping Address</h4>
						<ul class="list">
							<li><a><span>Address</span> : <%= address.addres %></a></li>
							<li><a href="#"><span>State</span>
									<%=address.state%>
								</a></li>
							<li><a href="#"><span>Country</span>
									<%=address.country%>
								</a></li>
							<li><a href="#"><span>Pincode</span>
									<%=address.pincode%>
								</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="order_details_table">
				<h2>Order Details</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product</th>
								<th scope="col">Quantity</th>
								<th scope="col">Total</th>
							</tr>
						</thead>
						<tbody>
							<% for(let i=0;i<productDatas.length;i++) {%>
								<tr>
									<td>
										<p>
											<%= productDatas[i].productId.productName %>
										</p>
									</td>
									<td>
										<h5>
											<%=productDatas[i].quantity%>
										</h5>
									</td>
									<td>
										<p>
											<%=productDatas[i].total%>
										</p>
									</td>
								</tr>
								<%}%>
									<tr>
										<td>
											<h4>Discount</h4>
										</td>
										<td>
											<h5></h5>
										</td>
										<td>
											<p>
												<%= order.couponDis %>
											</p>
										</td>
									</tr>
									<tr>
										<td>
											<h4>Shipping</h4>
										</td>
										<td>
											<h5></h5>
										</td>
										<td>
											<p style="color:green">Free</p>
										</td>
									</tr>
									<tr>
										<td>
											<h4>Total</h4>
										</td>
										<td>
											<h5></h5>
										</td>
										<td>
											<p>
												<%= order.cartTotal %>
											</p>
										</td>
									</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
	<!--================End Order Details Area =================-->

	<!-- start footer Area -->
	

	<%- include('../layouts/userFooter.ejs') %>
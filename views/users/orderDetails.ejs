                            </tr>
                        </thead>
                        <tbody>
                            <% if(order){ for(let i=0;i<order.length;i++) {%>
                                <tr>

                                    <td>
                                        <p>
                                            <%=order[i]._id%>
                                        </p>
                                    </td>

                                    <td>
                                        <h5>
                                            <%=order[i].paymentMethod%>
                                        </h5>

                                    </td>
                                    <td>
                                        <p>
                                            <%=orderDate[i]%>
                                        </p>

                </div>
                </td>

                <td>
                    <h5>
                        <%=order[i].cartTotal%>
                    </h5>
                </td>
                <%if(order[i].status !=="Cancelled" ){%>
                    <td>
                        <h5 style="color:green">
                            <%=order[i].status%>
                        </h5>
                    </td>

                    <td>
                        <a href="/cancelOrder?id=<%=order[i]._id%>" class="genric-btn danger-border circle">Cancel</a>
                    </td>

                    <%}else{%>
                        <td>
                            <h5 style="color: red ;">
                                <%=order[i].status%>
                            </h5>
                        </td>
                        <td></td>
                        <%}%>
                            </tr>

                            <% }}else{%>
                                <p>empty</p>

                                <%} %>


                                    <tr class="out_button_area">
                                        <td>

                                        </td>
                                        <td>

                                        </td>
                                        <td>

                                        </td>
                                        <td>
                                            <div class="checkout_btn_inner d-flex align-items-center">
                                                <a class="gray_btn" href="/shop">Continue Shopping</a>

                                            </div>
                                        </td>
                                    </tr>

                                    </tbody>
                                    </table>
            </div>
        </div>
        </div>
    </section>
